    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/chai": "^4.2.8",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-xml-bodyparser": "^0.3.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.0",
    "@types/xml2js": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
